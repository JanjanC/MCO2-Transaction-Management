                                <!--GENRE COLUMN 1-->
                                <div class='col'>
                                    <!--GENRE-ITEM-->
                                    <div class='form-check'>
                                        <input
                                            class='form-check-input'
                                            type='radio'
                                            value='Documentary'
                                            id='movie-genre-item1'
                                            name='movies-genre'
                                        />
                                        <label class='form-check-label' for='movie-genre-item1'>
                                            Documentary
                                        </label>
                                    </div>
                                    <!--GENRE-ITEM-->
                                    <div class='form-check'>
                                        <input
                                            class='form-check-input'
