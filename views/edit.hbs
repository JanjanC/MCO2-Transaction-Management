                                <label><h4>NAME</h4></label>
                                <input
                                    type='text'
                                    class='form-control w-75'
                                    placeholder="Enter actor's name"
                                    id='actor1-name'
                                    name='actor1-name'
                                    value='{{actor_1}}'
                                />
