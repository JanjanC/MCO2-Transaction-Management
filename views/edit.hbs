                                        <input
                                            class='form-check-input'
                                            type='radio'
                                            value='Short'
                                            id='movie-genre-item2'
                                            name='movies-genre'
                                            {{#if short}}checked{{/if}}
                                        />
                                        <label
                                            class='form-check-label'
                                            for='movie-genre-item2'
                                        >
                                            Short
