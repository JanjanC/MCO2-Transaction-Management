                    </div>
                </div>

                <!--DIRECTORS-->
                <div class='p-4 mt-4 border rounded' id='directors-div'>
                    <h2>DIRECTORS</h2>
                    <div class='row mt-4 pb-4'>
                        <div class='col'>
                            <!--FIRST NAME-->
                            <div class='form-group'>
                                <label><h4>NAME</h4></label>
                                <input
                                    type='text'
                                    class='form-control w-50'
                                    placeholder="Enter director's name"
                                    id='director-name'
                                    name='director-name'
                                    value='{{director}}'
                                />
                                <div
                                    class='text-danger'
                                    id='director-name-error'
                                ></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--ACTORS-->
                <div class='p-4 my-4 border rounded' id='actors-div'>
                    <h2>ACTORS</h2>
                    <div class='row mt-4 pb-4'>
                        <div class='col'>
                            <h3>Actor 1</h3>
                            <!--NAME-->
