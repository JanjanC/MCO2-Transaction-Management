<html lang='en'>
    <head>
        <link rel='stylesheet' href='../assets/lib/bootstrap/css/bootstrap.min.css' />
        <link rel='stylesheet' href='../assets/lib/font-awesome/css/all.css' />
        <script type='text/javascript' src='../assets/lib/popper/popper.js'></script>
        <script type='text/javascript' src='../assets/lib/jquery/jquery-3.6.0.js'></script>
        <script type='text/javascript' src='../assets/lib/bootstrap/js/bootstrap.bundle.min.js'></script>
        <script type='text/javascript' src='../assets/scripts/movie-validator.js'></script>
        <title>Edit Movie</title>
    </head>
    <body>
        <div class='container h-100 w-100 p-3 my-4'>
            <a href='../' class='h1'><i class='fas fa-arrow-left'></i></a><span class="h1 ml-3">EDIT MOVIE</span>
            <form action='/edit/{{id}}' method="POST" id="form" onsubmit="return validateInput()">
            <input name="old-name" value="{{name}}" type="hidden" />
            <input name="old-year" value="{{year}}" type="hidden" />
            <input name="old-rating" value="{{rating}}" type="hidden" />
            <input name="old-genre" value="{{genre}}" type="hidden" />
            <input name="old-director" value="{{director}}" type="hidden" />
            <input name="old-actor-1" value="{{actor_1}}" type="hidden" />
            <input name="old-actor-2" value="{{actor_2}}" type="hidden" />
            <div class='p-4 my-4 border rounded' id='movies-div'>
                <!--MOVIES-->
                <div class='p-4 my-4 border rounded' id='movies-div'>
                    <h2>MOVIE</h2>
                    <div class='row mt-4'>
                        <div class='col'>
                            <!--NAME-->
                            <div class='form-group'>
                                <label for='movies-name'><h4>NAME</h4></label>
                                <input
                                    type='text'
                                    class='form-control w-75'
                                    placeholder='Enter movie name'
                                    id='movies-name'
                                    name='movies-name'
                                    value="{{name}}"
                                />
                                <div
                                    class='text-danger'
                                    id='name-error'
                                ></div>
                            </div>
                            <!--YEAR-->
                            <div class='form-group'>
                                <label for='movies-year'><h4>YEAR</h4></label>
                                <input
                                    type='number'
                                    class='form-control w-75'
                                    placeholder='Enter movie year'
                                    id='movies-year'
                                    name='movies-year'
                                    min='1700'
                                    max='2200'
                                    step='1'
                                    value="{{year}}"
                                />
                                <div
                                    class='text-danger'
                                    id='year-error'
                                ></div>
                            </div>
                            <!--RATING-->
                            <div class='form-group'>
                                <label for='movies-rating'><h4>RATING</h4></label>
                                <input
                                    type='number'
                                    class='form-control w-75'
                                    placeholder='Enter movie rating'
                                    id='movies-rating'
                                    name='movies-rating'
                                    min='1'
                                    max='9.9'
                                    step='0.1'
                                    value="{{rating}}"
                                />
                                <div
                                    class='text-danger'
                                    id='rating-error'
                                ></div> </div>
                        </div>
                        <div class='col'>
                            <!--GENRE-->
                            <label><h4>GENRE</h4></label>
                            <div
                                class='text-danger'
                                id='genre-error'
                            ></div>
                            <div class='p-3 border rounded row mr-2' id='genres'>
                                <!--GENRE COLUMN 1-->
                                <div class='col'>
                                    <!--GENRE-ITEM-->
                                    <div class='form-check'>
                                        <input
                                            class='form-check-input'
                                            type='radio'
                                            value='Documentary'
                                            id='movie-genre-item1'
                                            name='movies-genre'
                                            {{#if documentary}}checked{{/if}}
                                        />
                                        <label
                                            class='form-check-label'
                                            for='movie-genre-item1'
                                        >
                                            Documentary
                                        </label>
                                    </div>
                                    <!--GENRE-ITEM-->
